#:import BoxLayout kivy.uix.boxlayout
#:import Popup kivy.uix.popup


<RegistrationScreen@Screen>:
    main_manager: self.main_manager

    Button:
        #id: sign_in_button
        text: "Reg"
        size_hint: .2 ,.05
        pos_hint: {"right": .85, "center_y": .1}
        #opacity: 0
        #disabled: True
        bg_color: (0,0,0,0)# root.parent.parent.primary_color if root.parent else (0,0,0,1)
        #color: root.parent.parent.secondary_color if root.parent else (0,0,0,1)

    Button:
        text: "letmein"
        size_hint: .2 ,.05
        pos_hint: {"right": .25, "center_y": .1}
        bg_color: (0,0,0,0)
        on_press:
            root.main_manager.current = "news"

    TextInput:
        id: pochta
        size_hint: (None, None)
        size: (200, 50)
        pos_hint: {"right": .7, "center_y": 0.9}
        hint_text: 'address'

    TextInput:
        id: password
        size_hint: (None, None)
        size: (200, 50)
        pos_hint: {"right": .7, "center_y": 0.8}
        hint_text: 'password'
