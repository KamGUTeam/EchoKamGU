#:import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton

<GeneralScreen>:

    FloatLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDRectangleFlatIconButton:
            icon: "tooltip-text"
            text: "Язык"
            font_size: '20sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.8}
            size_hint: 1, 0.05

        MDLabel:
            text: "Темная тема"
            size_hint: 1, None
            font_size: '20sp'
            halign: "center"
            valign: "top"
            bold: False
            pos_hint: {'center_x': 0.2, 'y': 0.645}

        MDSwitch:
            size_hint: None, None
            size: "48dp", "48dp"
            pos_hint: {'center_x': .87, 'center_y': .7}

        MDLabel:
            text: "Автозапуск видео"
            size_hint: 1, None
            font_size: '20sp'
            halign: "center"
            valign: "top"
            bold: False
            pos_hint: {'center_x': 0.25, 'y': 0.545}

        MDSwitch:
            size_hint: None, None
            size: "48dp", "48dp"
            pos_hint: {'center_x': .87, 'center_y': .6}


