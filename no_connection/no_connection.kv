#:import MDLabel kivymd.label.MDLabel
#:import MDTextFieldRound kivymd.uix.textfield.MDTextFieldRound
#:import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton

#no_connection-outline

<SettingsScreen>:

    FloatLayout:

        MDToolbar:
            title: "Настройки"
            pos_hint: {"top": 1}
            elevation: 10
            left_action_items: [['menu', lambda x: root.sidebar.ids.nav_drawer.set_state('toggle')]]


        # 2
        # notifications & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "android-messages"
            text: "Уведомления"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.8}
            size_hint: 1, 0.1
            on_release:
                root.sidebar.ids.sidebar_manager.current = 'notifications_screen'

        # <<<



        # 3
        # generals & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "settings"
            text: "Настройки"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.7}
            size_hint: 1, 0.1
        # <<<


        # 4
        # info & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "information"
            text: "Информация"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.6}
            size_hint: 1, 0.1

        # <<<


        # 5
        # support & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "headset"
            text: "Тех. поддержка"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
            size_hint: 1, 0.1
        # <<<

        # 6
        # kamgu pic & label
        # >>>
        Image:
            source: 'data/pics/kamgu_logo.png'
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}


        MDLabel:

            text_size: '48sp'
            size_hint: 0.8, 0.5
            pos_hint: {'center_x': 0.75, 'center_y': 0.07}
            text: 'by KamGU SQuad'
            font_size: '16sp'
            bold: True
            italic: True

        # <<<














