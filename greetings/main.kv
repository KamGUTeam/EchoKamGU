#:import Carousel kivy.uix.carousel
#:import images_path kivymd.images_path
#:import MDRaisedButton kivymd.uix.button

<GreetCard>:
    orientation: "vertical"
    size_hint_y: None
    height: self.win_height
    pos_hint: {"top": 1}

    Image:
        source: root.image_path
        size_hint: None, None
        size: root.width, dp(400)
        pos_hint: {"top": 1}

    MDLabel:
        theme_text_color: "Custom"
        bold: True
        text_color: app.theme_cls.primary_color
        text: root.text
        size_hint_y: None
        height: dp(60)
        halign: "center"


<ScreenOne@Screen>:
    name: "screen one"
    GreetCard:
        text: "Swipe to switch to screen one".upper()


<ScreenTwo@Screen>:
    name: "screen two"
    GreetCard:
        text: "Swipe to switch to screen two".upper()


<ScreenThree@Screen>:
    name: "screen three"
    GreetCard:
        text: "Swipe to switch to screen three".upper()


<ScreenFour@Screen>:
    name: "screen four"
    GreetCard:
        text: "Swipe to switch to screen four".upper()


<ScreenFive@Screen>:
    name: "screen five"
    main_manager: None

    GreetCard:
        text: "Swipe to switch to screen five".upper()
    MDRaisedButton:
        id: log_in_button
        text: "Вход"
        size_hint: .3 ,.05
        pos_hint: {"right": .95, "center_y": .15}
        bg_color: (0,0,0,1)
        on_press:
            root.main_manager.current = "login"



<GreetSwiperManager>:
    orientation: "vertical"
    main_manager: None

    BoxLayout:
        #padding: dp(10)
        orientation: "vertical"

        MDSwiperManager:
            id: swiper_manager

            ScreenOne:

            ScreenTwo:

            ScreenThree:

            ScreenFour:

            ScreenFive:
                main_manager: root.main_manager


<GreetingsScreen>
    id: greet_screen
    main_manager: self.main_manager

    GreetSwiperManager
        main_manager: root.main_manager
