#:import MDLabel kivymd.uix.label
#:import MDTextFieldRound kivymd.uix.textfield.MDTextFieldRound
#:import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton

#no_connection-outline

<SettingsScreen>:
    sidebar: None

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # 2
        # notifications & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "android-messages"
            text: "Уведомления"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.8}
            size_hint: 1, 0.1
            on_release:
                root.sidebar.ids.sidebar_manager.current = 'notifications_screen'
                root.sidebar.ids.toolbar.title = "Уведомления"

        # <<<



        # 3
        # generals & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "settings"
            text: "Настройки"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.7}
            size_hint: 1, 0.1
            on_release:
                root.sidebar.ids.sidebar_manager.current = 'general_screen'
                root.sidebar.ids.toolbar.title = "Настройки"
        # <<<


        # 4
        # info & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "information"
            text: "Информация"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.6}
            size_hint: 1, 0.1
            on_release:
                root.sidebar.ids.sidebar_manager.current = 'about_screen'
                root.sidebar.ids.toolbar.title = "Информация"

        # <<<


        # 5
        # support & pic
        # >>>
        MDRectangleFlatIconButton:
            icon: "headset"
            text: "Тех. поддержка"
            font_size: '26sp'
            text_color: 0, 0, 0, 1
            width: dp(280)
            pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
            size_hint: 1, 0.1
            on_release:
                root.sidebar.ids.sidebar_manager.current = 'support_screen'
                root.sidebar.ids.toolbar.title = "Тех. поддержка"
        # <<<

        # 6
        # kamgu pic & label
        # >>>
        Image:
            source: 'data/pics/kamgu_logo.png'
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}


        MDLabel:

            text_size: '48sp'
            size_hint: 0.8, 0.5
            pos_hint: {'center_x': 0.75, 'center_y': 0.07}
            text: 'by KamGU SQuad'
            font_size: '16sp'
            bold: True
            italic: True
















