#:import BoxLayout kivy.uix.boxlayout
#:import Popup kivy.uix.popup


<LogInScreen@Screen>:
    main_manager: self.main_manager

    MDRaisedButton:
        #id: sign_in_button
        text: "Войти"
        size_hint: .3 ,.05
        pos_hint: {"right": .95, "center_y": .15}
        bg_color: (0,0,0,0)
        on_press:
            root.login_press() #root.login.text, root.password.text

    MDTextFieldRound:
        id: login
        size_hint: (.65, None)
        size: (200, 50)
        pos_hint: {"right": .7, "center_y": .9}
        hint_text: 'login'
        normal_color: [.5, 0, 1, .1]
        foreground_color: [0, 0, 0, 1]
        icon_left: 'account'
        icon_type: 'left'

    MDTextFieldRound:
        id: password
        size_hint: (.65, None)
        size: (200, 50)
        pos_hint: {"right": .7, "center_y": 0.8}
        hint_text: 'password'
        normal_color: [0, 0, 1, .3]
        password: True
        foreground_color: [0, 0, 0, 1]
        icon_left: 'account-key'
        icon_type: 'left'