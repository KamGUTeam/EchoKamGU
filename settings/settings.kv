#:import MDLabel kivymd.label.MDLabel
#:import MDTextFieldRound kivymd.uix.textfield.MDTextFieldRound
#:import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton

#no_connection-outline

<SettingsScreen>:

    GridLayout:
        cols: 1
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


        FloatLayout:

            MDTextField:

                pos_hint:{'center_x': 0.5, 'center_y': 0.88}
                size_hint: 0.95, None
                hint_text: "Поиск..."
                color_mode: 'custom'
                #helper_text_mode: "on_focus"
                #helper_text: "Color is defined by 'line_color_focus' property"
                line_color_focus: 0, 0, 0, 1


            #size_hint: 0.5, 0.5
            # 1
            # no_connection & pic
            Image:
                source: 'no_connection.png'
                size_hint: 0.1, 0.1
                pos_hint: {'center_x': 0.08, 'y': 0.9}

            MDLabel:
                text_size: '48sp'
                size: self.texture_size
                pos_hint: {'center_x': 0.68, 'center_y': 0.95}
                text: 'Настройки'
                font_size: '30sp'
                bold: True

            # 2
            # notifications & pic
            # >>>
            MDRectangleFlatIconButton:
                icon: "android-messages"
                text: "Уведомления"
                font_size: '26sp'
                text_color: 0, 0, 0, 1
                width: dp(280)
                pos_hint: {'center_x': 0.5, 'center_y' : 0.8}
                size_hint: 1, 0.1

            # <<<



            # 3
            # generals & pic
            # >>>
            MDRectangleFlatIconButton:
                icon: "settings"
                text: "Настройки"
                font_size: '26sp'
                text_color: 0, 0, 0, 1
                width: dp(280)
                pos_hint: {'center_x': 0.5, 'center_y' : 0.7}
                size_hint: 1, 0.1
            # <<<


            # 4
            # info & pic
            # >>>
            MDRectangleFlatIconButton:
                icon: "information"
                text: "Информация"
                font_size: '26sp'
                text_color: 0, 0, 0, 1
                width: dp(280)
                pos_hint: {'center_x': 0.5, 'center_y' : 0.6}
                size_hint: 1, 0.1

            # <<<


            # 5
            # support & pic
            # >>>
            MDRectangleFlatIconButton:
                icon: "headset"
                text: "Тех. поддержка"
                font_size: '26sp'
                text_color: 0, 0, 0, 1
                width: dp(280)
                pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
                size_hint: 1, 0.1
            # <<<

            # 6
            # kamgu pic & label
            # >>>
            Image:
                source: 'kamgu.png'
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}


            MDLabel:

                text_size: '48sp'
                size_hint: 0.8, 0.5
                pos_hint: {'center_x': 0.75, 'center_y': 0.07}
                text: 'by KamGU SQuad'
                font_size: '16sp'
                bold: True
                italic: True

            # <<<














